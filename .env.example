# Server configuration
NODE_ENV=production
SERVER_PORT=6006
LOG_LEVEL=info

# Demo data seeding
DEMO_FLAG=true
# Set to false to skip automatic demo content seeding.

# Accepted values: error, warn, info, http, verbose, debug, silly

# Cross-origin resource sharing
CORS_ALLOWED_ORIGINS=http://localhost:6007,http://192.168.1.8:6007,https://projectx.example.com

# PostgreSQL connection string
DATABASE_URL=postgres://<USERNAME>:<PASSWORD>@192.168.1.3:5432/project-x-dev

# MinIO connection details
MINIO_ENDPOINT=cdn.example.com
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=<ACCESS_KEY>
MINIO_SECRET_KEY=<SECRET_KEY>
MINIO_REGION=us-east-1
MINIO_BUCKET=project-x-dev-bucket
MINIO_PRESIGNED_URL_EXPIRATION_SECONDS=3600

# Email / SMTP
EMAIL_FROM=noreply@example.com
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_USER=noreply@example.com
EMAIL_SMTP_PASS=<SMTP_PASSWORD>

# Authentication / User management
AUTH_ACCESS_TOKEN_SECRET=<ACCESS_TOKEN_SECRET>
AUTH_REFRESH_TOKEN_SECRET=<REFRESH_TOKEN_SECRET>
AUTH_ACCESS_TOKEN_TTL_SECONDS=900
AUTH_REFRESH_TOKEN_TTL_SECONDS=604800
AUTH_PASSWORD_RESET_TOKEN_TTL_MINUTES=30
AUTH_EMAIL_VERIFICATION_TOKEN_TTL_MINUTES=1440
AUTH_PASSWORD_SALT_ROUNDS=12
APP_BASE_URL=http://localhost:6007
AUTH_DEFAULT_ADMIN_EMAIL=admin@example.com
AUTH_DEFAULT_ADMIN_PASSWORD=<ADMIN_PASSWORD>
AUTH_DEFAULT_ADMIN_NAME=Project X Administrator
AUTH_RBAC_MODEL_PATH=src/modules/auth/casbin/rbac_with_domains_model.conf
AUTH_RBAC_POLICY_SEED_PATH=src/modules/auth/casbin/policy.seed.json
AUTH_RBAC_CACHE_TTL_SECONDS=300

# Client configuration
CLIENT_PORT=6007
CLIENT_ALLOWED_HOSTS=projectx.example.com,localhost,192.168.1.3
CLIENT_USE_SECURE_HMR=false

VITE_API_URL=http://localhost:6006
VITE_LOG_LEVEL=info

# Probe Management
PROBE_REGISTRY_WEBHOOK_SECRET=<PROBE_WEBHOOK_SECRET>
PROBE_HEARTBEAT_INTERVAL_SECONDS=300
PROBE_HEARTBEAT_GRACE_SECONDS=600
PROBE_DEPLOYMENT_TOPIC=probe.rollouts
PROBE_SDK_VERSION_MIN=1.0.0
PROBE_SDK_VERSION_TARGET=1.2.0

# Task Management
TASK_SLA_CHECK_INTERVAL_MINUTES=60
TASK_ESCALATION_THRESHOLDS_MINUTES=60,240,720
TASK_VERIFICATION_QUEUE_CONCURRENCY=5

# Reporting / Dashboards
REPORTS_EXPORT_BUCKET=project-x-reports
REPORTS_EXPORT_URL_EXPIRATION_SECONDS=900
REPORTS_CACHE_REFRESH_INTERVAL_MINUTES=15

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=4000
DATABASE_URL=postgresql://user:password@postgres-host:5432/projectx
NODE_ENV=development

# MinIO integration
MINIO_ENDPOINT=minio-host
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minio-access-key
MINIO_SECRET_KEY=minio-secret-key
MINIO_REGION=us-east-1
MINIO_BUCKET=projectx-health
MINIO_PRESIGNED_URL_EXPIRY_SECONDS=3600
MINIO_CORS_ALLOWED_ORIGINS=http://localhost:5173,https://example.com

# Email (SMTP) integration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=smtp-user
EMAIL_SMTP_PASSWORD=smtp-password
EMAIL_FROM_ADDRESS="Project X Health Check <no-reply@example.com>"

# Client configuration
VITE_API_BASE_URL=http://localhost:4000
